{
  "name": "text-to-playwright",
  "packageManager": "yarn@4.5.1",
  "version": "0.1.0",
  "files": [
    "dist"
  ],
  "bin": "dist/text-to-playwright.mjs",
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:static": "tsx src/index.static.ts",
    "dev:meter": "tsx src/index.scenario.ts --scenario meter",
    "dev:template": "tsx src/index.scenario.ts --scenario template-crud",
    "html": "serve assets/test",
    "test": "vitest --exclude ./tests",
    "test:ci": "vitest --config vitest.config.ci.ts",
    "pw": "playwright test",
    "build": "tsup",
    "release": "node scripts/release.mjs"
  },
  "dependencies": {
    "compromise": "14.14.2",
    "jiti": "2.4.2",
    "yaml": "2.7.0",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.4",
    "@eslint/js": "9.20.0",
    "@playwright/test": "1.49.1",
    "@types/node": "22.10.5",
    "axios": "1.9.0",
    "eslint": "9.20.0",
    "globals": "15.14.0",
    "prettier": "3.4.2",
    "prettier-plugin-organize-imports": "4.1.0",
    "serve": "14.2.4",
    "tsup": "8.5.0",
    "tsx": "4.19.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.23.0",
    "vite": "6.0.11",
    "vitest": "3.0.4"
  },
  "peerDependencies": {
    "@playwright/test": "^1.49.1"
  },
  "engines": {
    "node": ">=20"
  }
}
